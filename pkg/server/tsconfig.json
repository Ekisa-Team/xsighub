{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "types": ["vite/client"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"]
    }
  }
}
